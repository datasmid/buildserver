<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>
    <mirrors>
        <mirror>
            <id>repo-snapshot</id>
            <mirrorOf>snapshots</mirrorOf>
            <url>{{ mvn_proxy_url }}/content/groups/public-snapshots</url>
        </mirror>
        <mirror>
            <id>repo</id>
            <mirrorOf>*,!snapshots</mirrorOf>
            <url>{{ mvn_proxy_url }}/content/groups/public</url>
        </mirror>
    </mirrors>
    <localRepository>/home/jenkins/repository/</localRepository>
    <profiles>
        <profile>
            <id>repo</id>
            <pluginRepositories>
                <pluginRepository>
                    <id>snapshots</id>
                    <url>{{ mvn_proxy_url }}</url>
                    <releases><enabled>false</enabled></releases>
                    <snapshots><enabled>true</enabled></snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>central</id>
                    <url>{{ mvn_proxy_url }}</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>false</enabled></snapshots>
                </pluginRepository>
            </pluginRepositories>
            <repositories>
                <repository>
                    <id>snapshots</id>
                    <url>{{ mvn_proxy_url }}</url>
                    <releases><enabled>false</enabled></releases>
                    <snapshots><enabled>true</enabled></snapshots>
                </repository>
                <repository>
                    <id>central</id>
                    <url>{{ mvn_proxy_url }}</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>false</enabled></snapshots>
                </repository>
            </repositories>
        </profile>
         <profile>
		  <repositories>
			<repository>
			  <snapshots>
				<enabled>false</enabled>
			  </snapshots>
			  <id>central</id>
			  <name>libs-release</name>
			  <url>{{ mvn_deploy_url }}/libs-release</url>
			</repository>
			<repository>
			  <snapshots />
			  <id>snapshots</id>
			  <name>libs-snapshot</name>
			  <url>{{ mvn_deploy_url }}/libs-snapshot</url>
			</repository>
		  </repositories>
		  <pluginRepositories>
			<pluginRepository>
			  <snapshots>
				<enabled>false</enabled>
			  </snapshots>
			  <id>central</id>
			  <name>plugins-release</name>
			  <url>{{ mvn_deploy_url }}/plugins-release</url>
			</pluginRepository>
			<pluginRepository>
			  <snapshots />
			  <id>snapshots</id>
			  <name>plugins-snapshot</name>
			  <url>{{ mvn_deploy_url }}/plugins-snapshot</url>
			</pluginRepository>
		  </pluginRepositories>
		  <id>artifactory</id>
		</profile>
    </profiles>
    <servers>
        <server>
            <id>artifactory</id>
            <username>admin</username>
            <password>{{ mvn_artifactory_password.stdout }}</password>
        </server>
    </servers>
</settings>
